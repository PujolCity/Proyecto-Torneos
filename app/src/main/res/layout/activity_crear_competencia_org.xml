<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CrearCompetenciaOrgActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="283dp"
        android:layout_height="114dp"
        android:layout_marginTop="16dp"
        android:text="@string/txtTipoOrg"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/txtSelecTipoOrg"
        android:layout_width="229dp"
        android:layout_height="71dp"
        android:layout_marginTop="196dp"
        android:text="@string/txtTipo"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <Spinner
        android:id="@+id/spinnerTipoOrg"
        android:layout_width="134dp"
        android:layout_height="50dp"
        android:layout_marginTop="208dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.734"
        app:layout_constraintStart_toEndOf="@+id/txtSelecTipoOrg"
        app:layout_constraintTop_toTopOf="parent">
    </Spinner>


    <TextView
        android:id="@+id/txtDescTipoOrg"
        android:layout_width="147dp"
        android:layout_height="44dp"
        android:text="@string/txtDescripcion"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSelecTipoOrg">

    </TextView>

    <TextView
        android:id="@+id/descripcionTipoOrg"
        android:layout_width="324dp"
        android:layout_height="141dp"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDescTipoOrg">

    </TextView>

    <Button
        android:id="@+id/btnCCvlvr_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:text="@string/txtBtnVolver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnCCSig_3"
        app:layout_constraintHorizontal_bias="0.682"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descripcionTipoOrg"
        app:layout_constraintVertical_bias="0.0">

    </Button>

    <Button
        android:id="@+id/btnCCSig_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:text="@string/txtCrear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.73"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descripcionTipoOrg"
        app:layout_constraintVertical_bias="0.005">

    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>