<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.pantalla_carga.CoOrganizadorFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_titulo_coorg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Invite a un co-organizador"
            android:textSize="16sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/tv_buscar_coorg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:gravity="start"
            android:text="Encuentre el usuario por nombre"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <EditText
                android:id="@+id/etUsername"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="usuario"
                android:textSize="18sp"></EditText>

            <Button
                android:id="@+id/btnComprobar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:text="Buscar"
                android:textColor="@color/cardview_light_background"
                android:textSize="12sp"></Button>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_sin_usuarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:padding="15dp"
        android:text="No se encontraron resultados"
        android:textColor="#F40606"
        android:textStyle="bold"
        tools:visibility="gone"></TextView>

    <LinearLayout
        android:id="@+id/lin_usuarios_encontrados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        tools:visibility="invisible">

        <TextView
            android:id="@+id/tv_rdo_busqueda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:text="Resultados encontrados"
            android:textSize="14sp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:visibility="visible">

            <Spinner
                android:id="@+id/spinnerUsers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_vertical"></Spinner>

            <Button
                android:id="@+id/btnEnviarInvitacion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="2"
                android:backgroundTint="@color/colorPrimary"
                android:text="Invitar"
                android:textColor="@color/cardview_light_background"
                android:textSize="12sp"></Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>