<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3dp">

        <TextView
            android:id="@+id/tv_title_operacion_edicion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingStart="5dp"
            android:text="Tipo de edicion"
            android:textSize="12sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_operacion_edicion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_title_operacion_edicion"
            android:layout_toRightOf="@id/tv_title_operacion_edicion"
            android:hint="Tipo de edicion"
            android:paddingStart="10dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_title_fecha_edicion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_title_editor_edicion"
            android:layout_toStartOf="@id/tv_fecha_edicion"
            android:text="Fecha"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_fecha_edicion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_title_editor_edicion"
            android:layout_alignParentEnd="true"
            android:hint="Fecha de edicion"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_title_editor_edicion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title_operacion_edicion"
            android:paddingStart="5dp"
            android:text="Editado por"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_editor_edicion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_title_editor_edicion"
            android:layout_toEndOf="@id/tv_title_editor_edicion"
            android:hint="Editor"
            android:paddingStart="10dp"
            android:textSize="12sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>