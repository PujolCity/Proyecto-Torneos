                <EditText
                    android:id="@+id/etCiudad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="5"
                    android:hint="Buscar ciudad"
                    android:maxLines="1"></EditText>

                <ImageButton
                    android:id="@+id/ib_buscar_compe"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/search"></ImageButton>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_rdos_buscar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingTop="10dp"
                android:text="Seleccione una ciudad"
                android:textStyle="bold"></TextView>

            <Spinner
                android:id="@+id/spinner_ciudad_compe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingBottom="5dp"></Spinner>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="25dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/txtGenero"></TextView>

                <Spinner
                    android:id="@+id/spinnerGenero"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"></Spinner>

            </LinearLayout>

            <Button
                android:id="@+id/btnCCSig_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/txtBtnSig"
                android:textColor="@color/cardview_light_background"
                app:layout_constraintHorizontal_bias="0.531"></Button>

        </LinearLayout>
    </LinearLayout>

