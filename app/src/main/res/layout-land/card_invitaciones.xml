<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="30dp">

            <TextView
                android:id="@+id/tv_nombreOrg_invitacion"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/txtNombre"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_categoria_invitacion">
            </TextView>

            <TextView
                android:id="@+id/tv_competencia_invitacion"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/menu_Competencias"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </TextView>

            <TextView
                android:id="@+id/tv_categoria_invitacion"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/txtCategoria"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_competencia_invitacion">
            </TextView>

            <ImageButton
                android:id="@+id/btn_Aceptar_invitacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:backgroundTint="@color/colorPrimary"
                android:src="@drawable/ic_aceptar"
                android:textColor="@color/cardview_light_background"
                app:layout_constraintStart_toEndOf="@+id/tv_competencia_invitacion"
                app:layout_constraintTop_toTopOf="parent">
            </ImageButton>

            <ImageButton
                android:id="@+id/btn_Rechazar_invitacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/colorPrimary"
                android:src="@drawable/ic_rechazar"
                android:textColor="@color/cardview_light_background"
                app:layout_constraintStart_toEndOf="@+id/btn_Aceptar_invitacion"
                app:layout_constraintTop_toTopOf="parent">
            </ImageButton>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>
</androidx.cardview.widget.CardView>